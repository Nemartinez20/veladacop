---
import { FIGHTERS } from "../consts/fighters";
import BoxerCard from "./BoxerCard.astro";
---

<section class="relative flex min-h-screen w-full">
  <div
    class="bg-[url('/images/hero.png')] bg-cover bg-center w-full mask-fade-bottom"
  >
    <div class="relative flex flex-col items-center p-8 w-full">
      <div
        id="landing"
        class="absolute inset-0 flex flex-col items-center w-full py-24"
      >
        <h3 class="font-light text-gray-50 leading-tight">
          <strong>26</strong> DE <br /><strong> JULIO</strong>
        </h3>

        <figure class="relative">
          <img
            class="w-64 h-auto mt-8 relative"
            src="/images/logo.png"
            alt="img_de la velada del aÃ±o"
            decoding="async"
          />
          <div class="absolute bg-pink-400/60 blur-2xl -z-10 size-84 top-24">
          </div>
        </figure>

        <h3 class="font-light text-gray-50 leading-tight">
          ESTADIO <br /> LA CARTUJA <br /><strong>SEVILLA</strong>
        </h3>

        <h3 class="font-light text-gray-50 leading-tight">
          <a
            href="#"
            rel="noopener noreferrer"
            target="_blank"
            class="inline-block transition hover:scale-125"
          >
            TWITCH.TV <br />
            <strong>TERMI</strong>
          </a>
        </h3>
      </div>

      <div class="relative flex flex-col items-center justify-end p-8">
        <div class="flex flex-wrap justify-center gap-2">
          {FIGHTERS.map(({ id, name }) => <BoxerCard id={id} name={name} />)}
        </div>
      </div>
    </div>
  </div>
</section>
